<?xml version="1.0" encoding="utf-8"?>
<form
	lessfiles="media://com_bg/css/backend.less||media://com_bg/css/backend.css"
	validate="true"
    tabbed="1"
>
	<fieldset name="basic_configuration"
		label="Look at ledge customer view"
		description="COM_BG_PROFILES_GROUP_BASIC_DESC"
		class="tab-pane active"
	>
		<field name="firstname" type="text"
			class="input-mini"
			label="First Name"
			labelclass="bg-label bg-label-main"
			required="true"
			size="50"
		 />

		<field name="cb_next" type="calendar"
			class="input-small"
			label="Next Delivery"
			labelclass="bg-label"
			required="true"
			size="20"
			default="NOW"
		 />
		<field name="cb_status" type="model" label="JSTATUS"
		    model="BgModelStatuses"
		    key_field="value" 
            value_field="title"
			labelclass="bg-label"
			class="input-medium"
			filter="intval" size="1" default="1"
		>
		</field>
	</fieldset>

	<fieldset name="description_group"
		label="I should be a tab?"
		class="tab-pane"
	>
		<field name="cb_notes" type="textarea"
			label="Notes"
			class="inputbox"
			required="false"
		/>
	</fieldset>

</form>
